{
  // Burasi tum saglayicilar icin konfigurasyon
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    //Burasi sadece Consol icin konfigurasyon
    "Console": { // Console provider.
      "LogLevel": {
        "Default": "Error", // Overrides preceding LogLevel:Default setting.
        "Microsoft.Hosting": "Trace" // Debug:Microsoft.Hosting category.
      }
    },
    //Bunun sadece hata ayiklama  icin konfigurasyon
    "Debug": { // Debug provider.
      "LogLevel": {
        "Default": "Trace", // Overrides preceding LogLevel:Default setting.
        "Microsoft.Hosting": "Error" // Debug:Microsoft.Hosting category.
      }
    }
  },
  "AllowedHosts": "*",


  // -----------------------------------------------------------------------------------------------------------------------------------------

  // CollageDBContext baglanti dizesi

  "ConnectionStrings": {
    "CollegeAppDBConnection": "Data Source=.;Initial Catalog=CollegeAppDB;Integrated Security=True;Trust Server Certificate=True"


